{% extends 'base.html.twig' %}

{% block head_title %}Classes{% endblock %}
{% block title %}Classes{% endblock %}

{% block page %}
    {% for namespace in index.namespace %}
        {% if namespace.class %}
            <section>
                <h2 id="{{ namespace.name|escape('id') }}">{{ namespace.name }}</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for class in namespace.class %}
                            <tr>
                                <td>
                                    <a href="classes/{{ (namespace.name ~ '\\' ~ class.name)|escape('id') ~ '.' ~ FILE_EXTENSION }}">{{ class.name }}</a>
                                </td>
                                <td>{{ class.description|default(' ') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </section>
        {% endif %}
    {% endfor %}
{% endblock %}
